<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="15dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lblProductoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Producto:"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblproductoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/lblProductoc"
        android:paddingLeft="5dp"
        android:text="xxxx:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/lblCantidadc"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Cantidad:"
        android:layout_below="@+id/lblProductoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/cantidad"
        android:textSize="20dp"
        android:text="00000000:"
        android:paddingLeft="5dp"
        android:layout_below="@+id/lblProductoc"
        android:layout_toRightOf="@+id/lblCantidadc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/lblFechaRegistro"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Fecha:"
        android:layout_below="@id/lblCantidadc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/fecharegistro"
        android:textSize="20dp"
        android:text="2021-11-02:"
        android:paddingLeft="5dp"
        android:layout_below="@+id/lblCantidadc"
        android:layout_toRightOf="@+id/lblFechaRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>